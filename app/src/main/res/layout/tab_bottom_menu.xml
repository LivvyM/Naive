<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mImageIcon"
            android:layout_width="@dimen/home_menu_size"
            android:layout_height="@dimen/home_menu_size"
            android:layout_centerInParent="true"
            />

        <View
            android:id="@+id/mViewDot"
            android:layout_width="@dimen/home_menu_size"
            android:layout_height="2dp"
            android:background="@drawable/main_tab_text_selector"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/line_height"
            />
    </RelativeLayout>
</LinearLayout>