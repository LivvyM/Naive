<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_FF"
        android:layout_marginBottom="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mImageAvatar"
                android:layout_width="@dimen/discover_header_size"
                android:layout_height="@dimen/discover_header_size"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/discover_header_size"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/mTextName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/text_333"
                    />

                <TextView
                    android:id="@+id/mTextTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:textColor="@color/text_999"
                    />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/mImagePicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/discover_picture_min_height"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/text_333"
                />

            <TextView
                android:id="@+id/mTextContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/text_999"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>